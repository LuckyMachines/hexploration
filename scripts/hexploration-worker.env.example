# Hexploration Worker Configuration
# Copy to .env in this directory: cp hexploration-worker.env.example .env

# RPC endpoint (Alchemy, Infura, public RPC, or local Anvil)
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY

# Any funded wallet â€” does NOT need admin role
# fulfillMockRandomness() and progressLoop() are callable by anyone
PRIVATE_KEY=0x...

# Chain: "sepolia" (default) or "foundry" (local Anvil)
# CHAIN=sepolia

# Override contract addresses as JSON (skips deployments.json)
# DEPLOYMENTS_JSON={"GAME_SETUP":"0x...","GAME_QUEUE":"0x...","HEXPLORATION_CONTROLLER":"0x...","GAMEPLAY":"0x..."}

# Polling interval in milliseconds (default: 5000)
POLL_INTERVAL_MS=5000

# Set to true for detailed logging
VERBOSE=false

# Health check HTTP server port (default: 9966)
# HEALTH_PORT=9966
